{
    "description": "If a page exposes a short URL via a 'link rev=canonical' header, fetch it and copy it to the clipboard. If not, create a shorturl at tinyurl and copy it to the clipboard as well.",
    "author": "Fred Wenzel <fwenzel@mozilla.com>",
    "dependencies": [
        "addon-kit",
        "api-utils"
    ],
    "version": "2.0",
    "fullName": "Copy ShortURL",
    "id": "jid0-ODIKJS9b4IT3H1NYlPKr0NDtLuE",
    "name": "copy-shorturl",
    "homepage": "http://copy-shorturl.rtfd.org",
    "preferences": [{
        "name": "service",
        "type": "menulist",
        "title": "(L10n)",
        "value": "isgd",
        "options": [
            {
                "value": "isgd",
                "label": "is.gd (http://is.gd/abcde)"
            }, {
                "value": "tinyurl",
                "label": "tinyurl.com (http://tinyurl.com/abcde)"
            }, {
                "value": "googl",
                "label": "goo.gl (http://goo.gl/abcde)"
            }, {
                "value": "custom",
                "label": "custom"
            }
        ]
    }, {
        "name": "customurl",
        "type": "string",
        "value": "",
        "title": "(L10n)",
        "description": "(L10n)"
    }, {
        "name": "serviceurl_docs",
        "type": "control",
        "label": "(L10n)",
        "title": "(L10n)"
    }],
    "permissions": {
        "private-browsing": true
    }
}
